{% extends "base.jinja" %}
{% block head %}
{{ super() }}
<link href="720.css" rel="stylesheet" type="text/css">
<link rel="apple-touch-icon" sizes="57x57" href="/720/icons/apple-touch-icon-57x57.png">
<link rel="apple-touch-icon" sizes="60x60" href="/720/icons/apple-touch-icon-60x60.png">
<link rel="apple-touch-icon" sizes="72x72" href="/720/icons/apple-touch-icon-72x72.png">
<link rel="apple-touch-icon" sizes="76x76" href="/720/icons/apple-touch-icon-76x76.png">
<link rel="apple-touch-icon" sizes="114x114" href="/720/icons/apple-touch-icon-114x114.png">
<link rel="apple-touch-icon" sizes="120x120" href="/720/icons/apple-touch-icon-120x120.png">
<link rel="apple-touch-icon" sizes="144x144" href="/720/icons/apple-touch-icon-144x144.png">
<link rel="apple-touch-icon" sizes="152x152" href="/720/icons/apple-touch-icon-152x152.png">
<link rel="apple-touch-icon" sizes="180x180" href="/720/icons/apple-touch-icon-180x180.png">
<link rel="icon" type="image/png" href="/720/icons/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="/720/icons/favicon-194x194.png" sizes="194x194">
<link rel="icon" type="image/png" href="/720/icons/favicon-96x96.png" sizes="96x96">
<link rel="icon" type="image/png" href="/720/icons/android-chrome-192x192.png" sizes="192x192">
<link rel="icon" type="image/png" href="/720/icons/favicon-16x16.png" sizes="16x16">
<link rel="manifest" href="/720/icons/manifest.json">
<link rel="shortcut icon" href="/720/icons/favicon.ico">
<meta name="msapplication-TileColor" content="#2d89ef">
<meta name="msapplication-TileImage" content="/720/icons/mstile-144x144.png">
<meta name="msapplication-config" content="/720/icons/browserconfig.xml">
<meta name="theme-color" content="#ffffff">
{{ extrahead }}
{% endblock head %}
{% block title %}HCIN 720: Prototyping Wearable and Internet of Things Devices{% endblock %}
{% block toprow %}
<div class="row">
	<div class="col-xs-12">
		<h1 class="sitetitle"><span class="fa fa-cloud"></span>
			<a class="noformat" href="index.html">HCIN 720: Prototyping Wearable and
				Internet of Things Devices</a></h1> </div>
</div>
{% endblock %}

{% block sidebar_left %}
	{% if not page.noleftsidebar %}
		<div class="col-xs-3 col-left sidebar">
			{{ 'left_sidebar.md' | includemd }}
		</div>
	{% endif %}
{% endblock %}

{% block content %}
	{% set center_cols = 6 + (3 if page.noleftsidebar else 0) + (3 if
		page.norightsidebar else 0) %}
	<div style='height:100%' class='center-content col-xs-{{center_cols}}'>
		{{ page.content }}
	</div>
{% endblock %}

{% block sidebar_right %}
	{% if not page.norightsidebar %}
		<div class='col-xs-3 col-right sidebar'>
			{{ 'right_sidebar.md' | includemd }}
		</div>
	{% endif %}
{% endblock %}
