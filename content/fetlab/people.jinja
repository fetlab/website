{% macro people(catname, articles, cat_sort_name, cat_sort_list) %}
	<section id="{{ catname | lower | replace(' ', '-') }}">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2>{{ catname | title }}</h2>
					<hr class="fa primary">
				</div>
			</div>
			{% for article in (articles | dictsortby(cat_sort_name, cat_sort_list)) if article.status != 'alum' %}
				{% if loop.index0 % 2 == 0 %}
					<div class="row">
				{% endif %}
					<div class="col-sm-6 portfolio-item">
						<table class="table table-condensed">
							<tr>
								<td class="img">
									<div class="people-image img-circle"
										style="background-image:url('/{{catname | lower}}/{{article.image}}')">
									</div>
								</td>
								<td class="desc">
									{{ article.content }}
									<div class="icons">
										{% if article.homepage %}
											<a href="{{article.homepage}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-home fa-stack-1x fa-inverse"></span>
												</span></a>
										{% endif %}
										{% if article.twitter %}
											<a href="http://twitter.com/{{article.twitter}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-twitter fa-stack-1x fa-inverse"></span>
												</span></a>
										{% endif %}
										{% if article.scholar %}
											<a href="{{article.scholar}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-graduation-cap fa-stack-1x fa-inverse"></span>
												</span></a>
										{% endif %}
										{% if article.github %}
											<a href="http://github.com/{{article.github}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-github fa-stack fa-stack-1x fa-inverse"><span>
												</span></a>
										{% endif %}
										{% if article.cv %}
											{% if article.cv[:4] == 'http' %}
												<a href="{{article.cv}}">
											{% else %}
												<a href="/{{catname | lower}}/{{article.cv}}">
											{% endif %}
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-file-o fa-stack-1x
														fa-inverse"></span>
													<strong style="font-size: 40%; margin-top: .45em;"
														class="fa-stack-1x fa-stack-text fa-inverse">CV</span>
											</span></a>
										{% endif %}
									</div>
								</td>
							</tr>
						</table>
					</div>
				{% if loop.index0 % 2 == 1 or loop.last %}
					</div>
				{% endif %}
			{% endfor %}
			<div class="col-lg-12 text-center">
				<h3>Alumni</h3>			
			</div>
			{% for article in (articles | dictsortby(cat_sort_name, cat_sort_list)) if article.status == 'alum' %}
				{% if loop.index0 % 3 == 0 %}
					<div class="row">
				{% endif %}
				<div class="col-sm-3 {{ 'col-sm-offset-2' if loop.index0 % 3 == 0 }} alum portfolio-item">
						<table class="table table-condensed">
							<tr>
								<td class="img">
									<div class="people-image img-circle"
										style="background-image:url('/{{catname | lower}}/{{article.image}}')">
									</div>
								</td>
								<td class="desc">
									<span class="name">{{ article.title }}</span> ({{ article.role | title }})
									<div class="icons">
										{% if article.homepage %}
											<a href="{{article.homepage}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-home fa-stack-1x fa-inverse"></span>
												</span></a>
										{% endif %}
										{% if article.twitter %}
											<a href="http://twitter.com/{{article.twitter}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-twitter fa-stack-1x fa-inverse"></span>
												</span></a>
										{% endif %}
										{% if article.scholar %}
											<a href="{{article.scholar}}">
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-graduation-cap fa-stack-1x fa-inverse"></span>
												</span></a>
										{% endif %}
										{% if article.cv %}
											{% if article.cv[:4] == 'http' %}
												<a href="{{article.cv}}">
											{% else %}
												<a href="/{{catname|lower}}/{{article.cv}}">
											{% endif %}
												<span class="fa-stack fa-lg">
													<span class="fa fa-circle fa-stack-2x"></span>
													<span class="fa fa-file-o fa-stack-1x
														fa-inverse"></span>
													<strong style="font-size: 40%; margin-top: .45em;"
														class="fa-stack-1x fa-stack-text fa-inverse">CV</span>
											</span></a>
										{% endif %}
									</td>
								</tr>
							</table>
						</div>
				{% if loop.index0 % 3 == 2 %}
					</div>
				{% endif %}
			{% endfor %}
									

		</div>
	</section>
{% endmacro %}
