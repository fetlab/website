{% extends "dan.jinja" %}

{% block morecontent %}
{% for proj in page.projects | sortby('kind', ('sw', 'swhw', 'hw')) %}
  {% if loop.first or loop.previtem.kind != proj.kind %}
    <h2>{{ {'sw': 'Software', 'swhw': 'Software/Hardware', 'hw':
      'Hardware'}[proj.kind|lower] }}</h2>
  {% endif %}
  <div>
    <h3>{{ proj.title }}</h3>
    {{ proj.content }}
  </div>
{% endfor %}
{% endblock %}
